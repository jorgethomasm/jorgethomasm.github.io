@article{Bernard2022,
    AUTHOR = {Bernard, Thomas and Wallner, Steffen and Leibfried, Ulrich and Stürtz, Simon, and Thomas, Jorge},
    TITLE = {Cloud-basierter Energiemanager ermöglicht angebots- und bedarfs- gerechte Zuschaltung von Energieträgern},
